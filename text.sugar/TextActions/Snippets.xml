	<action id="de.minimalweb.textActions.singleQuotes" category="actions.text.text/actions.text.autopairing/minimalweb.textActions.pairing/minimalwebAutopairing.5">
		<class>TEAforEspresso</class>
		<title>Autopair Single Quotes</title>
		<text-trigger>'</text-trigger>
		<setup>
			<action>insert_snippet</action>
				<options>
					<dict>
						<key>default</key>
						<string><![CDATA['$1'$0]]></string>
					</dict>
				</options>
			<undo_name>Single Quotes</undo_name>
		</setup>
	</action>
		
