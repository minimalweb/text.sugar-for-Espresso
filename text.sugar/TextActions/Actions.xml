<?xml version="1.0" encoding="UTF-8"?>
<action-recipes>
	
	<action id="com.onecrayon.DeleteLine" category="actions.text.text/minimalweb.textActions.manipulation/minimalwebTextActions.2">
		<class>Spice</class>
		<title>Delete Line</title>
		<key-equivalent>shift control k</key-equivalent>
		<setup>
			<script>delete_line</script>
			<undo_name>Delete Line</undo_name>
		</setup>
	</action>
	
	<action id="com.onecrayon.DeleteLine" category="actions.text.text/minimalweb.textActions.manipulation/minimalwebTextActions.1">
		<class>Spice</class>
		<title>Duplicate Line</title>
		<key-equivalent>shift control d</key-equivalent>
		<setup>
			<script>duplicate_line</script>
			<undo_name>Duplicate Line</undo_name>
		</setup>
	</action>
	
	<action id="de.minimalweb.genericTextActions.joinLines" category="actions.text.text/minimalweb.textActions.manipulation/minimalwebTextActions.3">
		<class>Spice</class>
		<title>Join lines</title>
		<key-equivalent>control shift j</key-equivalent>
		<setup>
			<script>join_lines</script>
			<undo_name>Join lines</undo_name>
		</setup>
	</action>
	
	<action id="com.onecrayon.MoveLineUp" category="actions.text.text/minimalweb.textActions.moving/minimalwebTextActions.4">
		<class>Spice</class>
		<title>Move Line Up</title>
		<key-equivalent>control command arrow-up</key-equivalent>
		<setup>
			<script>move_line</script>
			<undo_name>Move Line Up</undo_name>
			<arguments>
				<array>
					<string>up</string>
				</array>
			</arguments>
		</setup>
	</action>
	
	<action id="com.onecrayon.MoveLineDown" category="actions.text.text/minimalweb.textActions.moving/minimalwebTextActions.5">
		<class>Spice</class>
		<title>Move Line Down</title>
		<key-equivalent>control command arrow-down</key-equivalent>
		<setup>
			<script>move_line</script>
			<undo_name>Move Line Down</undo_name>
			<arguments>
				<array>
					<string>down</string>
				</array>
			</arguments>
		</setup>
	</action>

</action-recipes> 