<?xml version="1.0" encoding="UTF-8"?>
<action-recipes>
	
	<snippet id="de.minimalweb.textActions.autopairBrackets" category="hidden">
		<title>Autopair Brackets</title>
		<text-trigger key-equivalent="("></text-trigger>
		<text>($1)$0</text>
	</snippet>
	
	<snippet id="de.minimalweb.textActions.autopairCurlyBrackets" category="hidden">
		<title>Autopair Curly Brackets</title>
		<text-trigger key-equivalent="{"></text-trigger>
		<text>{$1}$0</text>
	</snippet>
	
	<snippet id="de.minimalweb.textActions.autopairSquareBrackets" category="hidden">
		<title>Autopair Square Brackets</title>
		<text-trigger key-equivalent="["></text-trigger>
		<text>[$1]$0</text>
	</snippet>
	
	<snippet id="de.minimalweb.textActions.autopairSingleQuotes" category="hidden">
		<title>Autopair Single Quotes</title>
		<text-trigger key-equivalent="'"></text-trigger>
		<text>'$1'$0</text>
	</snippet>
	
	<snippet id="de.minimalweb.textActions.autopairDoubleQuotes" category="hidden">
		<title>Autopair Double Quotes</title>
		<text-trigger key-equivalent='"'></text-trigger>
		<text>"$1"$0</text>
	</snippet>


	<action id="de.minimalweb.textActions.duplicateSelection" category="actions.text.important/actions.text.generic/actions.text.lines/minimalweb.textActions.manipulation/1">
		<class>Spice</class>
		<title>Duplicate Line/Selection</title>
		<key-equivalent>shift control d</key-equivalent>
		<setup>
			<script>duplicate_selection</script>
			<undo_name>Duplicate Selection</undo_name>
		</setup>
	</action>
	
  <!-- Line actions -->
	<action id="com.onecrayon.DeleteLine" category="actions.text.important/actions.text.generic/actions.text.lines/minimalweb.textActions.manipulation/2">
		<class>Spice</class>
		<title>Delete Line</title>
		<key-equivalent>shift control k</key-equivalent>
		<setup>
			<script>delete_line</script>
			<undo_name>Delete Line</undo_name>
		</setup>
	</action>
	
	<action id="de.minimalweb.textActions.joinLines" category="actions.text.important/actions.text.generic/actions.text.lines/minimalweb.textActions.manipulation/3">
		<class>Spice</class>
		<title>Join Line With Next</title>
		<key-equivalent>control shift j</key-equivalent>
		<setup>
			<script>join_lines</script>
			<undo_name>Join Lines</undo_name>
		</setup>
	</action>

</action-recipes> 