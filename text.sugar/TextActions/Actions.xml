<?xml version="1.0" encoding="UTF-8"?>
<action-recipes>

	<action id="com.onecrayon.DeleteLine" category="actions.text.text/minimalweb.textActions.manipulation/mwTextManipulation.1">
		<class>Spice</class>
		<title>Duplicate Selection</title>
		<key-equivalent>shift control d</key-equivalent>
		<setup>
			<script>duplicate_selection</script>
			<undo_name>Duplicate Selection</undo_name>
		</setup>
	</action>
	
	<action id="com.onecrayon.DeleteLine" category="actions.text.text/minimalweb.textActions.manipulation/mwTextManipulation.2">
		<class>Spice</class>
		<title>Delete Line</title>
		<key-equivalent>shift control k</key-equivalent>
		<setup>
			<script>delete_line</script>
			<undo_name>Delete Line</undo_name>
		</setup>
	</action>
	
	<action id="de.minimalweb.textActions.joinLines" category="actions.text.text/minimalweb.textActions.manipulation/mwTextManipulation.3">
		<class>Spice</class>
		<title>Join Line With Next</title>
		<key-equivalent>control shift j</key-equivalent>
		<setup>
			<script>join_lines</script>
			<undo_name>Join Lines</undo_name>
		</setup>
	</action>
	
	<action id="com.onecrayon.MoveLineUp" category="actions.text.text/minimalweb.textActions.sorting/mwTextSorting.1">
		<class>Spice</class>
		<title>Move Line Up</title>
		<key-equivalent>control command arrow-up</key-equivalent>
		<setup>
			<script>move_line</script>
			<undo_name>Move Line Up</undo_name>
			<arguments>
				<array>
					<string>up</string>
				</array>
			</arguments>
		</setup>
	</action>
	
	<action id="com.onecrayon.MoveLineDown" category="actions.text.text/minimalweb.textActions.sorting/mwTextSorting.2">
		<class>Spice</class>
		<title>Move Line Down</title>
		<key-equivalent>control command arrow-down</key-equivalent>
		<setup>
			<script>move_line</script>
			<undo_name>Move Line Down</undo_name>
			<arguments>
				<array>
					<string>down</string>
				</array>
			</arguments>
		</setup>
	</action>

</action-recipes> 